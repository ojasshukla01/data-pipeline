# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for these file types
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.bat text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sql text eol=lf
*.css text eol=lf
*.html text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.duckdb binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Ensure .env files are never committed
.env filter=git-crypt diff=git-crypt
.env.* filter=git-crypt diff=git-crypt

# Mark sensitive files
*.key linguist-generated=true
*.secret linguist-generated=true
*.pem linguist-generated=true
